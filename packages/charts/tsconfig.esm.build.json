{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "outDir": "./esm",
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext"
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": [
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/**/__tests__/*.ts"
  ]
}
