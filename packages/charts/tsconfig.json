{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./lib",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "ES2021.Intl"],
    "moduleResolution": "bundler",
    "skipLibCheck": true
  },
  "include": ["src/**/*", ".storybook/**/*"],
  "exclude": ["node_modules"]
}
