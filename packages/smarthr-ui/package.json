{
  "name": "smarthr-ui",
  "description": "SmartHR ui components built with React.",
  "version": "84.0.0",
  "author": "SmartHR-UI Team",
  "type": "module",
  "dependencies": {
    "@smarthr/wareki": "^1.3.0",
    "dayjs": "^1.11.18",
    "decimal.js": "^10.6.0",
    "intl-messageformat": "^10.7.18",
    "lodash.merge": "^4.6.2",
    "lodash.range": "^3.2.0",
    "polished": "^4.3.0",
    "react-draggable": "^4.5.0",
    "react-icons": "^5.5.0",
    "react-innertext": "^1.1.5",
    "react-pdf": "^9.2.1",
    "react-transition-group": "^4.4.5",
    "tailwind-variants": "^0.3.1",
    "tailwindcss": "^3.4.19",
    "typescript-eslint": "^8.54.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-typescript": "^12.1.4",
    "@storybook/addon-docs": "9.0.18",
    "@storybook/addon-styling-webpack": "^2.0.0",
    "@storybook/addon-webpack5-compiler-babel": "^3.0.6",
    "@storybook/cli": "9.0.18",
    "@storybook/react": "9.0.18",
    "@storybook/react-webpack5": "9.0.18",
    "@swc/core": "^1.13.21",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/lodash.merge": "^4.6.9",
    "@types/lodash.range": "^3.2.9",
    "@types/node": "^20.19.30",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^19.2.3",
    "@types/react-transition-group": "^4.4.12",
    "@types/styled-components": "^5.1.36",
    "autoprefixer": "^10.4.23",
    "babel-loader": "^10.0.0",
    "babel-plugin-polyfill-corejs2": "^0.4.15",
    "babel-plugin-polyfill-regenerator": "^0.6.6",
    "chromatic": "^15.0.0",
    "css-loader": "^7.1.3",
    "ecma-version-validator-webpack-plugin": "^1.2.1",
    "eslint-plugin-storybook": "9.0.18",
    "glob": "11.0.3",
    "http-server": "^14.1.1",
    "jsdom": "^26.1.0",
    "memory-fs": "^0.5.0",
    "npm-run-all2": "^8.0.4",
    "playwright": "^1.54.2",
    "plop": "^4.0.5",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "postcss-styled-syntax": "^0.7.1",
    "postcss-syntax": "^0.36.2",
    "process": "^0.11.10",
    "react": "^19.1.5",
    "react-docgen-typescript": "^2.4.0",
    "react-dom": "^19.1.5",
    "react-ga4": "^2.1.0",
    "react-intl": "^7.1.14",
    "rimraf": "^6.0.1",
    "rollup": "^4.45.3",
    "rollup-plugin-preserve-directives": "^0.4.0",
    "rollup-plugin-rename-node-modules": "^1.3.1",
    "standard-version": "^9.3.2",
    "storybook": "9.0.18",
    "storybook-addon-pseudo-states": "9.0.18",
    "style-loader": "^4.0.0",
    "styled-components": "^5.3.11",
    "tailwind-merge": "^3.3.1",
    "ts-loader": "^9.5.4",
    "tsx": "^4.20.6",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.5",
    "webpack": "^5.100.2"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-intl": "^7.0.4",
    "styled-components": "^5.0.1"
  },
  "bugs": {
    "url": "https://github.com/kufu/smarthr-ui/issues"
  },
  "files": [
    "esm",
    "lib",
    "smarthr-ui.css"
  ],
  "homepage": "https://github.com/kufu/smarthr-ui#readme",
  "keywords": [
    "react",
    "react-component",
    "smarthr",
    "typescript"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix"
    ]
  },
  "main": "lib/index.js",
  "module": "esm/index.js",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./esm/index.js",
      "require": "./lib/index.js"
    },
    "./types": {
      "types": "./lib/types/index.d.ts",
      "import": "./esm/types/index.js",
      "require": "./lib/types/index.js"
    },
    "./lib/*": {
      "types": "./lib/*.d.ts",
      "require": "./lib/*.js",
      "import": "./esm/*.js"
    },
    "./esm/*": {
      "types": "./lib/*.d.ts",
      "require": "./lib/*.js",
      "import": "./esm/*.js"
    },
    "./smarthr-ui.css": "./smarthr-ui.css",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kufu/smarthr-ui.git"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:lib": "tsc -p tsconfig.build.json",
    "build:esm": "rollup --config rollup.esm.config.js",
    "build:css": "tailwindcss -i ./src/styles/index.css -o ./smarthr-ui.css",
    "build-storybook": "storybook build --quiet",
    "clean": "rimraf ./lib ./esm ./smarthr-ui.css",
    "format": "run-s -c format:*",
    "format:eslint": "eslint --fix './**/*.ts{,x}'",
    "format:prettier": "prettier --write './src/**/*.ts{,x}'",
    "format:stylelint": "stylelint --fix './src/**/*.ts{,x}'",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint './**/*.ts{,x}'",
    "lint:prettier": "prettier --check './src/**/*.ts{,x}'",
    "lint:style": "stylelint './**/*.ts{,x}'",
    "lint:tsc": "tsc --noEmit -p tsconfig.build.json",
    "prepublishOnly": "run-s clean lint build",
    "release": "standard-version -a",
    "release:dryrun": "standard-version --dry-run",
    "storybook": "storybook dev -p 6006",
    "dev": "run-s storybook",
    "test": "vitest",
    "test:build-assets": "tsx scripts/build-test.ts",
    "chromatic": "chromatic",
    "write:ui-props": "tsx scripts/exportUIProps.ts",
    "export:ui-props": "run-s build:lib write:ui-props",
    "scaffold:storybook": "plop"
  },
  "sideEffects": [
    "*.css"
  ],
  "typings": "lib/index.d.ts",
  "standard-version": {
    "scripts": {
      "prerelease": "run-s build:lib write:ui-props && git add public/exports/smarthr-ui-props.json"
    }
  }
}
